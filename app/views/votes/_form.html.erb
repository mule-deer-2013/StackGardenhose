<div id="votes_form_container">

<span>
  <%= render "votes/counter", votable: votable %>
</span>

<% if current_user %>

  REVIEW: use helpers, create a helper upvote_form, donwvote_form both these methods should use a vote_form(value)
  <%= upvote_form %>
  <%= form_for @vote, remote: true do |f| %>
    <%= f.hidden_field :value, :value => 1 %>
    <%= f.hidden_field :votable_id, :value => votable.id %>
    <%= f.hidden_field :votable_type, :value => votable.class %>
    <%= f.submit "Upvote" %>
  <% end %>

  <%= form_for @vote, remote: true do |f| %>
    <%= f.hidden_field :value, :value => -1 %>
    <%= f.hidden_field :votable_id, :value => votable.id %>
    <%= f.hidden_field :votable_type, :value => votable.class %>
    <%= f.submit "Downvote" %>
  <% end %>

<% end %>

</div>

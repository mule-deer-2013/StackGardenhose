
<li><%= answer.body %> 
  | <strong>Karma: </strong> 
  <%= answer.votes.where(value: 1).count - answer.votes.where(value: -1).count %>
  <% if current_user %>
    <% if current_user.id != answer.user_id %>
      <%= render partial: "votes/form", locals: {answer: answer} %>
    <% else %>
      <%= link_to "Edit Your Answer", edit_question_answer_path(@question, answer) %>
    <%end %>
  <%end %>
</li>
